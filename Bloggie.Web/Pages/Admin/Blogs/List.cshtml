@page
@model Bloggie.Web.Pages.Admin.Blogs.ListModel
@{
}


<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Blog Posts</h1>
	</div>
</div>

@{
	var messageDescription = (string)ViewData["MessageDescription"];

}

@if (!string.IsNullOrWhiteSpace(messageDescription)) 
{
	{
			<div class="container">
				<div class="alert alert-success alert-dismissible fade show mb-5">
					@Html.Raw(messageDescription)
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
				</div>
			</div>
	}
}

@if (Model.BlogPosts != null && Model.BlogPosts.Any())
{
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Heading</th>
					<th> </th>
				</tr>
			</thead>
			<tbody>
				@foreach (var BlogPost in Model.BlogPosts)
				{
					<tr>
						<td>@BlogPost.Id</td>
						<td>@BlogPost.Heading</td>
						<td><a href="/Admin/Blogs/Edit/@BlogPost.Id">View</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<div class="container">
		<p>No blog posts found.</p>
	</div>
}
